{% extends '@layouts/admin' %}

{% block content %}

<div class="dashboard">

    <div class="dashboard-row row-2">
        <div class="panel">
            <header>&nbsp;</header>
            <article class="!p-0">
                <div class="px-6 py-6">
                    <div class="font-light text-2xl flex justify-between">
                        <div class="inline-flex items-center text-zinc-500">
                            {{ icon('calendar2') }}
                            <div class="ml-3 text-zinc-800 tabular-nums" data-crate="date" data-format="YYYY/MM/DD">YYYY/MM/DD</div>
                        </div>

                        <div class="inline-flex items-center text-zinc-500">
                            {{ icon('clock') }}
                            <div class="ml-3 text-zinc-800 tabular-nums" data-crate="date" data-format="HH:mm:ss">HH:mm:ss</div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <ul class="flex">
                            <li class="mx-1.5 text-zinc-400">MON</li>
                            <li class="mx-1.5 text-zinc-800 font-semibold">TUE</li>
                            <li class="mx-1.5 text-zinc-400">WED</li>
                            <li class="mx-1.5 text-zinc-400">THU</li>
                            <li class="mx-1.5 text-zinc-400">FRI</li>
                            <li class="mx-1.5 text-zinc-400">SAT</li>
                            <li class="mx-1.5 text-zinc-400">SUN</li>
                        </ul>
                    </div>
                </div>

                <div class="px-4 py-4 border-t border-zinc-300">
                    <div class="text-right -mt-9 pt-0.5">
                        <div class="inline-block border-4 border-white">
                            <a href="#" class="btn btn-sm btn-teal">Add Activity</a>
                        </div>
                    </div>
                    <div class="text-zinc-400 italic text-center p-4">No Activities planned today</div>
                </div>
            </article>
        </div>
    </div>

    <div class="dashboard-row row-1">
        <div class="panel">
            <header>Some Title</header>
            <article>Some Content</article>
        </div>
    </div>

    <div class="dashboard-row row-1">
        <div class="panel">
            <header>Some Title</header>
            <article>Some Content</article>
        </div>
    </div>

</div>

{% endblock %}