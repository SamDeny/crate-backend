
<div class="py-4 text-left basis-1/3 flex items-center">
    <div class="btn btn-light btn-lg btn-icon-only" data-crate="menu">
        {{ icon('grid') }}
    </div>

    <div class="mx-4 h-6 w-px bg-zinc-300 dark:bg-zinc-700"></div>

    <div class="btn btn-light btn-lg btn-icon-only">
        {{ icon('eye') }}
    </div>
</div>

<div class="py-4 text-center basis-1/3 font-special text-xl text-zinc-500 dark:text-zinc-300 select-none">
    Crate CMS
</div>

<div class="flex items-center justify-end text-right basis-1/3">
    <div class="btn btn-light btn-lg btn-icon-only rounded-full" data-popover="crate_color_scheme" data-popover-placement="bottom">
        <div class="color-scheme"></div>
    </div>
    <template data-template="crate_color_scheme">
        <div class="popover">
            <article>
                <div class="flex gap-2">
                    <a href="#" class="color-scheme-button" data-crate="color-scheme" data-value="light">
                        <div class="color-scheme scheme-light mx-auto"></div>
                        <span class="text-xs font-semibold">Light</span>
                    </a>
                    <a href="#" class="color-scheme-button" data-crate="color-scheme" data-value="dark">
                        <div class="color-scheme scheme-dark mx-auto"></div>
                        <span class="text-xs font-semibold">Dark</span>
                    </a>
                    <a href="#" class="color-scheme-button" data-crate="color-scheme" data-value="focus">
                        <div class="color-scheme scheme-focus mx-auto"></div>
                        <span class="text-xs font-semibold">Focus</span>
                    </a>
                </div>
            </article>
        </div>
    </template>
    <script type="text/javascript">
        (function() {
            const colorScheme = localStorage.getItem('color-scheme') || 'light';
            document.querySelector('[data-popover="crate_color_scheme"] > div').classList.add(`scheme-${colorScheme}`);

            const template = document.querySelector('[data-template="crate_color_scheme"]').content.children[0];
            template.querySelector(`[data-value="${colorScheme}"]`).classList.add('current');
        })();
    </script>

    <div class="mx-4 h-6 w-px bg-zinc-300 dark:bg-zinc-700"></div>

    <div class="inline-flex h-[40px] items-center justify-center bg-zinc-100 dark:bg-zinc-700 rounded">
        <span class="px-2 mx-2 text-sm font-semibold text-zinc-700 dark:text-zinc-300">Username</span>

        <span class="h-[20px] w-px bg-zinc-300 mr-2"></span>

        <a href="" class="btn btn-sm btn-indigo btn-icon-only mr-1 bg-transparent border-transparent text-zinc-700 dark:text-zinc-300">
            {{ icon('pencil-fill') }}
        </a>

        <a href="" class="btn btn-sm btn-red btn-icon-only mr-2 bg-transparent border-transparent text-zinc-700 dark:text-zinc-300">
            {{ icon('door-closed') }}
        </a>
    </div>
</div>
